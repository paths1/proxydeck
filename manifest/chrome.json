{
  "description": "Smart proxy routing with regex patterns, tab badges showing active proxy, and traffic stats. Configure proxies your way.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16-light.png",
      "48": "icons/icon48-light.png",
      "128": "icons/icon128-light.png"
    },
    "default_title": "ProxyDeck",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16-light.png",
    "48": "icons/icon48-light.png",
    "128": "icons/icon128-light.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["node_modules/webextension-polyfill/dist/browser-polyfill.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}