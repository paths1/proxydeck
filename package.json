{
  "name": "proxydeck",
  "version": "1.5.4",
  "description": "A cross-browser extension that provides a streamlined, one-click solution for managing proxy connections.",
  "main": "babel.config.js",
  "scripts": {
    "build": "npm run build:all",
    "build:all": "npm run clean && npm run build:chrome && npm run build:firefox",
    "build:chrome": "webpack --env target=chrome --mode production",
    "build:firefox": "webpack --env target=firefox --mode production",
    "dev": "npm run dev:chrome",
    "dev:chrome": "webpack --env target=chrome --mode development --watch",
    "dev:firefox": "webpack --env target=firefox --mode development --watch",
    "clean": "rm -rf dist/",
    "icons": "bash resize_icons.sh",
    "package": "npm run build:all && bash package_for_store.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "validate": "node build_validate.js",
    "prepare": "husky"
  },
  "keywords": [
    "proxy",
    "socks",
    "chrome-extension",
    "firefox-addon",
    "browser-extension"
  ],
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@preact/compat": "^18.3.1",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "@types/webextension-polyfill": "^0.12.3",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "semantic-release": "^24.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1"
  },
  "sideEffects": [
    "*.css"
  ],
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-accordion": "^1.2.10",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lru-cache": "^11.1.0",
    "preact": "^10.26.8",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.3.0",
    "webextension-polyfill": "^0.12.0"
  },
  "browser": {
    "browser-polyfill": "./src/utils/browser-polyfill.js"
  }
}
